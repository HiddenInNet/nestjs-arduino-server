generator client {
  provider     = "prisma-client" // Nota: La doc de Nest usa "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model lecturas_sensores {
  id                Int       @id @default(autoincrement())
  fecha             DateTime? @default(now()) @db.Timestamp(6)
  temperatura       Decimal?  @db.Decimal
  humedad           Decimal?  @db.Decimal
  luz               Int?
  vibracion         Int?
  calidad_aire_ppm  Decimal?  @db.Decimal
  alcohol_detectado Boolean?
}

model configuraciones {
  id                     Int      @id @default(autoincrement())
  umbral_temperatura     Decimal? @db.Decimal
  umbral_humedad         Decimal? @db.Decimal
  umbral_luz             Int?
  umbral_vibracion       Int?
  umbral_calidad_aire_ppm Decimal? @db.Decimal
  alerta_alcohol         Boolean?
}
